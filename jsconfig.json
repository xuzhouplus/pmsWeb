{
  "compilerOptions": {
	"module": "commonjs",
	"target": "es2016",
	"jsx": "preserve",
	"checkJs": true,
	"baseUrl": "./",
	"paths": {
	  "@/*": ["./src/*"],
	  "@assets/*": ["./src/assets/*"],
	  "@components/*": ["./src/components/*"],
	  "@pages/*": ["./src/pages/*"],
	  "@utils/*": ["./src/utils/*"]
	},
	"experimentalDecorators": true
  },
  "exclude": ["node_modules", "**/node_modules/*", "build"]
}